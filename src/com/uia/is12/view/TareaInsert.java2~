        btadd.setEnabled(true);
    }//GEN-LAST:event_btnewActionPerformed

    private void btaddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btaddActionPerformed
        TareaBusiness tareaBL = new TareaBusiness();
        Tarea tarea = new Tarea();
        tarea.setCodigoProyecto(Integer.parseInt(txcodproyecto.getText()));
        tarea.setNombreTarea(txnombret.getText());
        tarea.setFechaCreacion(txfechac.getText());
        try {
            tareaBL.add(tarea);
        } catch (Exception ex) {
            Logger.getLogger(UsuarioInsert.class.getName()).log(Level.SEVERE, null, ex);
        }
        limpiar();
    try {
        tabla2();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
        disable();
    }//GEN-LAST:event_btaddActionPerformed


