     public void disable() {
        txusuarioe.setEditable(false);
        txfechacr.setEditable(false);
        txcodigo.setEditable(false);
        txnombrep.setEditable(false);
    }

    public void enable() {
        txusuarioe.setEditable(true);
        txfechacr.setEditable(true);
        txcodigo.setEditable(true);
        txnombrep.setEditable(true);
    }

    public void limpiar() {
        txfechacr.setText("");
        txusuarioe.setText("");
        txcodigo.setText("");
        txnombrep.setText("");
    }
    
    public void tabla() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Usuario");
        
        String sql = "select * from usuarios";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[2];
        while (res.next()){
            fila[0]= res.getString("CodigoUsuario");
            fila[1]= res.getString("NombreUsuario");
            
            model.addRow(fila);
        }
        jtusuarios.setModel(model);
    }
    
    public void tabla2() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo proyecto");
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Proyecto");
        model.addColumn("Fecha Creacion");
        
        
        
        String sql = "select * from proyectos";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[4];
        while (res.next()){
            fila[0]= res.getString("CodigoProyecto");
            fila[1]= res.getString("CodigoUsuario");
            fila[2]= res.getString("NombreProyecto");
            fila[3]= res.getString("FechaCreacion");
            model.addRow(fila);
        }
        jtproyectos.setModel(model);
        limpiar();
        
    }
    
