    public void limpiar(){
        txcodproyecto.setText("");
    }
    
    public void enable(){
        txcodproyecto.setEnabled(true);
    }
    
    public void tabla2() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo proyecto");
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Proyecto");
        model.addColumn("Fecha Creacion");
        
        
        
        String sql = "select * from proyectos";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[4];
        while (res.next()){
            fila[0]= res.getString("CodigoProyecto");
            fila[1]= res.getString("CodigoUsuario");
            
            fila[2]= res.getString("NombreProyecto");
            fila[3]= res.getString("FechaCreacion");
            model.addRow(fila);
        }
        jtproyectos.setModel(model);
        limpiar();
        
    }
    
    private void tabla() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Nombre proyecto");
        model.addColumn("Codigo Tarea");
        model.addColumn("Descripcion Tarea");
        
        
        String sql = " select proyectos.NombreProyecto, tareas.CodigoTarea, DescripcionTarea from proyectos inner join tareas on proyectos.CodigoProyecto=tareas.CodigoProyecto where proyectos.CodigoProyecto="+txcodproyecto.getText();
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[3];
        while (res.next()){
            fila[0]= res.getString("NombreProyecto");
            fila[1]= res.getString("CodigoTarea");
            fila[2]= res.getString("DescripcionTarea");
            model.addRow(fila);
        }
        jtconsul.setModel(model);
        limpiar();
        
    }

