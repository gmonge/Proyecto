    private void btconsultaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btconsultaActionPerformed
        mysqlDB = new MySQLDB();
        String sql = " select proyectos.NombreProyecto, tareas.CodigoTarea, DescripcionTarea from proyectos inner join tareas on proyectos.CodigoProyecto=tareas.CodigoProyecto where proyectos.CodigoProyecto="+txcodproyecto.getText();
    try {
        mysqlDB.execute(sql);
    } catch (SQLException ex) {
        Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        mysqlDB.closeExecute();
    } catch (SQLException ex) {
        Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla();
    } catch (SQLException ex) {
        Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
    }
    
    
    }//GEN-LAST:event_btconsultaActionPerformed

