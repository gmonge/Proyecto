     public void conn(String usuario,String contraseña)throws SQLException{
        mysqlDB = new MySQLDB();
        String sql = "select * from usuarios where NombreUsuario='" + usuario + "'and Contraseña='" + contraseña+ "'";
        ResultSet res = mysqlDB.executeQuery(sql);
        String cap = "";
        if (res.next()){
            JOptionPane.showMessageDialog(null, "Logueo Correcto");
                ProyectoPrograView pro = new ProyectoPrograView();
                mysqlDB.execute(sql);
                mysqlDB.closeExecute();
                usuariog = res.getString("NombreUsuario");
                Login log = new Login();
                cap=res.getString("NombreUsuario");
                lbus.setText(cap);
                System.out.print(cap);
                pro.show();
                
            } else {
                JOptionPane.showMessageDialog(null, "Logueo Incorrecto, Usuario o Constraseña mal digitados");
            }
      }
  
    public void disable() {
        txnombrep.setEditable(false);
        txfecha.setEditable(false);
        txusuarioen.setEditable(false);
    }

    public void enable() {
        txnombrep.setEditable(true);
        txfecha.setEditable(true);
        txusuarioen.setEditable(true);
    }

    public void limpiar() {
        txfecha.setText("");
        txusuarioen.setText("");
        txnombrep.setText("");
    }
    
    public void tabla() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Usuario");
        
        String sql = "select * from usuarios";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[2];
        while (res.next()){
            fila[0]= res.getString("CodigoUsuario");
            fila[1]= res.getString("NombreUsuario");
            
            model.addRow(fila);
        }
        jtusuarios.setModel(model);
    }
    
    public void tabla2() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo proyecto");
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Proyecto");
        model.addColumn("Fecha Creacion");

        String sql = "select * from proyectos";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[4];
        while (res.next()){
            fila[0]= res.getString("CodigoProyecto");
            fila[1]= res.getString("CodigoUsuario");
            
            fila[2]= res.getString("NombreProyecto");
            fila[3]= res.getString("FechaCreacion");
            model.addRow(fila);
        }
        jtproyectos.setModel(model);
        limpiar();
    }
