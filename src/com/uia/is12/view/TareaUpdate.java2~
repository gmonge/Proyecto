    public void disable() {
        txcodigomod.setEditable(false);
        txcodpro.setEditable(false);
        txfechc.setEditable(false);
        txnombret.setEditable(false);
    }

    public void enable() {
        txcodigomod.setEditable(true);
        txcodpro.setEditable(true);
        txfechc.setEditable(true);
        txnombret.setEditable(true);
    }

    public void limpiar() {
        txcodigomod.setText("");
        txcodpro.setText("");
        txfechc.setText("");
        txnombret.setText("");

    }

    public void tabla() throws SQLException {
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo proyecto");
        model.addColumn("Codigo Usuario");
        model.addColumn("Nombre Proyecto");
        model.addColumn("Fecha Creacion");

        String sql = "select * from proyectos";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[] fila = new String[4];
        while (res.next()) {
            fila[0] = res.getString("CodigoProyecto");
            fila[1] = res.getString("CodigoUsuario");
            fila[2] = res.getString("NombreProyecto");
            fila[3] = res.getString("FechaCreacion");
            model.addRow(fila);
        }
        jtproyectos.setModel(model);
        limpiar();

    }

    public void tabla2() throws SQLException {
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Tarea");
        model.addColumn("Descripcion Tarea");
        model.addColumn("Fecha Creacion");
        model.addColumn("Codigo Proyecto");

        String sql = "select * from tareas";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[] fila = new String[4];
        while (res.next()) {
            fila[0] = res.getString("CodigoTarea");
            fila[1] = res.getString("DescripcionTarea");
            fila[2] = res.getString("FechaCreacion");
            fila[3] = res.getString("CodigoProyecto");
            model.addRow(fila);
        }
        jttareas.setModel(model);
        limpiar();

    }

