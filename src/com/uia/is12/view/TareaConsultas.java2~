    private void btconsultaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btconsultaActionPerformed
        mysqlDB = new MySQLDB();
        String sql = "select tareas.DescripcionTarea, errores.CodigoError, errores.DescripcionError from tareas inner join errores on tareas.CodigoTarea=errores.CodigoTarea where tareas.CodigoTarea="+txcodproyecto.getText();
        try {
            mysqlDB.execute(sql);
        } catch (SQLException ex) {
            Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
        }
        try {
            mysqlDB.closeExecute();
        } catch (SQLException ex) {
            Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
        }
        try {
            tabla();
        } catch (SQLException ex) {
            Logger.getLogger(ProyectoConsultas.class.getName()).log(Level.SEVERE, null, ex);
        }
        limpiar();
    }//GEN-LAST:event_btconsultaActionPerformed


