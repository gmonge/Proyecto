    public void limpiar(){
        txcodproyecto.setText("");
    }
    
    public void enable(){
        txcodproyecto.setEnabled(true);
    }
    
    public void tabla() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Descripcion Tarea");
        model.addColumn("Codigo Error");
        model.addColumn("Descripcion Error");
        
        String sql = "select tareas.DescripcionTarea, errores.CodigoError, errores.DescripcionError from tareas inner join errores on tareas.CodigoTarea=errores.CodigoTarea where tareas.CodigoTarea="+txcodproyecto.getText();
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[3];
        while (res.next()){
            fila[0]= res.getString("DescripcionTarea");
            fila[1]= res.getString("CodigoError");
            fila[2]= res.getString("DescripcionError");
            model.addRow(fila);
        }
        jtconsul1.setModel(model);
        limpiar();
        
    }
    
    
    public void tabla2() throws SQLException{
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Tarea");
        model.addColumn("Descripcion Tarea");
        model.addColumn("Fecha Creacion");
        model.addColumn("Codigo Proyecto");
    
        String sql = "select * from tareas";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[]fila = new String[4];
        while (res.next()){
            fila[0]= res.getString("CodigoTarea");
            fila[1]= res.getString("DescripcionTarea");
            fila[2]= res.getString("FechaCreacion");
            fila[3]= res.getString("CodigoProyecto");
            model.addRow(fila);
        }
        jttareas.setModel(model);
        limpiar();
    }

