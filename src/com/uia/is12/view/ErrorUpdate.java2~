    public void disable() {
        txcoderrac.setEditable(false);
        txcodtarea.setEditable(false);
        txfechacr.setEditable(false);
        txnombree.setEditable(false);
    }

    public void enable() {
        txcoderrac.setEditable(true);
        txcodtarea.setEditable(true);
        txfechacr.setEditable(true);
        txnombree.setEditable(true);
    }

    public void limpiar() {
        txcoderrac.setText("");
        txcodtarea.setText("");
        txfechacr.setText("");
        txnombree.setText("");
    }

    public void tabla2() throws SQLException {
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Tarea");
        model.addColumn("Descripcion Tarea");
        model.addColumn("Fecha Creacion");
        model.addColumn("Codigo Proyecto");

        String sql = "select * from tareas";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[] fila = new String[4];
        while (res.next()) {
            fila[0] = res.getString("CodigoTarea");
            fila[1] = res.getString("DescripcionTarea");
            fila[2] = res.getString("FechaCreacion");
            fila[3] = res.getString("CodigoProyecto");
            model.addRow(fila);
        }
        jttareas.setModel(model);
        limpiar();
    }

    public void tabla() throws SQLException {
        mysqlDB = new MySQLDB();
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("Codigo Error");
        model.addColumn("Descripcion Error");
        model.addColumn("Fecha Creacion");
        model.addColumn("Codigo Tarea");

        String sql = "select * from errores";
        ResultSet res = mysqlDB.executeQuery(sql);
        String[] fila = new String[4];
        while (res.next()) {
            fila[0] = res.getString("CodigoError");
            fila[1] = res.getString("DescripcionError");
            fila[2] = res.getString("FechaCreacion");
            fila[3] = res.getString("CodigoTarea");
            model.addRow(fila);
        }
        jterror.setModel(model);
        limpiar();
    }


