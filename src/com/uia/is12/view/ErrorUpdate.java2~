        btupdate.setEnabled(true);
    }//GEN-LAST:event_btnewActionPerformed

    private void btupdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btupdateActionPerformed
        ErrorBusiness errorBl = new ErrorBusiness();
        com.uia.is12.domain.Error error = new com.uia.is12.domain.Error();
        error.setNombreError(txnombree.getText());
        error.setCodigoTarea(Integer.parseInt(txcodtarea.getText()));
        error.setFechaCreacion(txfechacr.getText());
        error.setCodigoError(Integer.parseInt(txcoderrac.getText()));
    try {
        errorBl.update(error);
    } catch (Exception ex) {
        Logger.getLogger(ErrorInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla2();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
        disable();
        btupdate.setEnabled(false);
        limpiar();
    }//GEN-LAST:event_btupdateActionPerformed


