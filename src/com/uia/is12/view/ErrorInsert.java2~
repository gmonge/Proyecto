    private void btaddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btaddActionPerformed
        ErrorBusiness errorBl = new ErrorBusiness();
        Error error = new Error();
        error.setNombreError(txdescrerror.getText());
        error.setCodigoTarea(Integer.parseInt(txcodigot.getText()));
        error.setFechaCreacion(txfechac.getText());
    try {
        errorBl.add(error);
    } catch (Exception ex) {
        Logger.getLogger(ErrorInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla2();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
    try {
        tabla();
    } catch (SQLException ex) {
        Logger.getLogger(TareaInsert.class.getName()).log(Level.SEVERE, null, ex);
    }
        disable();
        btadd.setEnabled(false);
        limpiar();
    }//GEN-LAST:event_btaddActionPerformed


